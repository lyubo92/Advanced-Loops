import java.util.Scanner;

public class sumDigits {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int num = Integer.parseInt(input.nextLine());
        int sum = 0;
        while(num > 0){
            sum += num % 10;
            num = num / 10;
        }
        System.out.println(sum);
    }
}
